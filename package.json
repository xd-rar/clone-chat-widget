{
  "name": "clone-chat-widget",
  "version": "2.0.0",
  "description": "Windows 95-styled desktop chat client for OpenClaw agents",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win"
  },
  "build": {
    "appId": "com.clonechat.widget",
    "productName": "Clone Chat Widget",
    "files": [
      "main.js",
      "splash.html",
      "startup.wav",
      "send.wav",
      "receive.wav",
      "hover.wav",
      "click.wav",
      "clone-chat-widget.html",
      "package.json"
    ],
    "extraResources": [
      { "from": "startup.wav", "to": "sounds/startup.wav" },
      { "from": "send.wav", "to": "sounds/send.wav" },
      { "from": "receive.wav", "to": "sounds/receive.wav" },
      { "from": "hover.wav", "to": "sounds/hover.wav" },
      { "from": "click.wav", "to": "sounds/click.wav" }
    ],
    "win": {
      "target": "dir",
      "icon": "icon.ico",
      "signAndEditExecutable": false
    }
  },
  "keywords": [
    "electron",
    "chat",
    "openclaw",
    "windows95",
    "retro"
  ],
  "author": "",
  "license": "MIT",
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^26.8.1",
    "png-to-ico": "^3.0.1",
    "rcedit": "^5.0.2",
    "sharp": "^0.34.5"
  },
  "dependencies": {
    "@electron/remote": "^2.1.0",
    "node-fetch": "^2.7.0",
    "ws": "^8.16.0"
  }
}
